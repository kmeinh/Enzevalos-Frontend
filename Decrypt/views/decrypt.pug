extends layout

block content
	div(class='mdl-layout__content')
		h3= title
		.ul
			each item in texts
				if texts.length > 1
					li= item
				else
					li(style='list-style-type: none;') item
		form(action='http://userpage.fu-berlin.de/wieseoli/letterbox/')
			div(class= 'decrypt-info')
				button(class='mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored' type='submit') Selber Ausprobieren 