extends layout

block content
	div(class='mdl-layout__content')
		h3= title
		.ul
			each item in texts
				li= item
		h4= 'Passwort'
		div(class='mdl-textfield mdl-js-textfield mdl-textfield--floating-label')
			input(class='mdl-textfield__input', type='text', id='password')
			label(class='mdl-textfield__label', for='password') Passwort eingeben
		div(class='password-container')
			button(class='mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored') Klartext anzeigen